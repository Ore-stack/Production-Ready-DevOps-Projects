{
  "name": "my-aws-webapp",
  "version": "1.0.0",
  "description": "A Node.js web application designed for AWS ECS deployment with CI/CD pipeline integration",
  "main": "app.js",
  "scripts": {
    "start": "node server.js",
    "dev": "ENVIRONMENT=development node app.js",
    "test": "jest --coverage --verbose",
    "lint": "eslint .",
    "build": "echo 'Build completed - ready for containerization'",
    "docker:build": "docker build -t my-aws-webapp .",
    "docker:run": "docker run -p 3001:3001 -e ENVIRONMENT=development my-aws-webapp"
  },
  "keywords": [
    "aws",
    "ecs",
    "docker",
    "devops",
    "ci-cd",
    "express",
    "webapp"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cross-spawn": "^7.0.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/my-aws-webapp.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/my-aws-webapp/issues"
  }
}