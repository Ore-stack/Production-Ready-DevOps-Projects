# Cheaper cluster for development with smaller nodes
apiVersion: eksctl.io/v1alpha5
kind: ClusterConfig

metadata:
  name: my-webapp-dev
  region: us-east-1
  version: "1.29"

vpc:
  clusterEndpoints:
    publicAccess: true
    privateAccess: true
    
iam:
  withOIDC: true

cloudWatch:
  clusterLogging:
    enableTypes: ["api"]

managedNodeGroups:
  - name: ng-dev
    instanceType: t3.small
    desiredCapacity: 1
    minSize: 1
    maxSize: 2
    ssh:
      allow: true
